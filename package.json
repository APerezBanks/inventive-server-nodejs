{
  "type": "module",
  "name": "inventive-server",
  "version": "1.0.0",
  "description": "Server for Inventive app",
  "main": "app.ts",
  "scripts": {
    "dev": "nodemon --watch src --ext ts --exec ts-node src/app.ts",
    "initdb": "ts-node src/db/initDb.ts && nodemon --watch src --ext ts --exec ts-node src/app.ts",
    "initdummydb": "ts-node src/db/initDb.ts && ts-node src/db/insertDummyData.ts && nodemon --watch src --ext ts --exec ts-node src/app.ts",
    "format": "biome format . --write",
    "lint": "biome lint .",
    "check": "biome check"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-fileupload": "^1.5.1",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^2.0.1",
    "mysql2": "^3.12.0",
    "sharp": "^0.34.0",
    "tesseract.js": "^6.0.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/multer": "^1.4.13",
    "@types/node": "^24.0.1",
    "globals": "^16.0.0",
    "nodemon": "^3.1.9",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
